{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": [
    "babel",
    "html"
  ],
  "settings": {
      "html/html-extensions": [".html"] 
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
      "comma-dangle": 2,
      "comma-style": ["error", "last"],
      "no-extra-semi": 2,
      "semi-spacing": 2,
      "semi": ["error", "never"],
      "indent": 2,
      "space-before-blocks": 2,
      "no-console": 0,
      "no-multi-spaces": 2,
      "no-extend-native": 0,
      "import/no-unresolved": 0,
      "no-undef": 0,
      "import/extensions": 0,
      "no-new": 0,
      "no-shadow": 0,
      "no-param-reassign": 0,
      "no-unused-vars": 0,
      "import/prefer-default-export": 1,
      "import/no-extraneous-dependencies": 0,
      "no-useless-escape": 0,
      "prefer-promise-reject-errors": 0,
      "no-unused-expressions": 0,
      "no-return-assign": 0,
      "max-len": 1,
      "no-mixed-operators": ["error", {"allowSamePrecedence": true}],
      "no-use-before-define": 0,
      "no-underscore-dangle": 0,
      "no-void": 0,
      "no-restricted-syntax": 0,
      "func-names": 0,
      "no-script-url": 0,
      "global-require": 0,
      "no-alert": 0,
      "class-methods-use-this": 0,
      "one-var": 0,
      "no-multi-assign": 0,
      "guard-for-in": 0,
      "no-restricted-properties": 0
  }
}